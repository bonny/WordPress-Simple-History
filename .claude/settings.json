{
	"includeCoAuthoredBy": false,
	"hooks": {
		"SessionStart": [
			{
				"matcher": "",
				"hooks": [
					{
						"type": "command",
						"command": ".claude/hooks/session-start.sh"
					}
				]
			}
		],
		"PostToolUse": [
			{
				"matcher": "Edit|Write",
				"hooks": [
					{
						"type": "command",
						"command": "f=$(jq -r '.tool_input.file_path'); [[ $f =~ \\.(md|css|js|jsx)$ ]] && npx prettier --write \"$f\" || true"
					},
					{
						"type": "command",
						"command": "f=$(jq -r '.tool_input.file_path'); [[ $f =~ \\.(js|jsx)$ ]] && npx wp-scripts lint-js --fix \"$f\" || true"
					},
					{
						"type": "command",
						"command": "f=$(jq -r '.tool_input.file_path'); [[ $f =~ \\.php$ ]] && npm run php:lint-fix -- \"$f\" || true"
					}
				]
			}
		]
	},
	"permissions": {
		"allow": [
			"Skill(git-commits)",
			"Bash(git add:*)",
			"Bash(git commit:*)",
			"Bash(npm run php:lint:*)",
			"Bash(npm run php:phpstan:*)",
			"Bash(php -l:*)",
			"Bash(grep:*)",
			"Bash(cat:*)",
			"Bash(docker compose ps:*)",
			"Bash(docker compose exec:*)",
			"Bash(docker network ls:*)",
			"Bash(docker compose run:*)",
			"Bash(find:*)",
			"WebSearch",
			"Bash(html2text)",
			"Bash(gh issue view:*)",
			"Bash(gh issue create:*)",
			"Bash(gh api:*)",
			"Bash(gh issue edit:*)",
			"Bash(npm run lint:css:*)",
			"Bash(ls:*)",
			"Skill(changelog)",
			"Skill(readme)",
			"Skill(commit-messages)"
		],
		"deny": [],
		"ask": []
	}
}
